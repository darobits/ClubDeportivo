@{
    ViewData["Title"] = "Inicio";
    var usuarioNombre = ViewBag.UsuarioNombre ?? "Invitado";
    var rolUsuario = ViewBag.RolUsuario ?? "Socio";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <header class="bg-primary text-white p-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="m-0">Club Deportivo</h1>
            <div class="text-end">
                <span class="fw-bold">@usuarioNombre</span>
                <div class="mt-2">
                    <a class="btn btn-light btn-sm me-2" asp-action="Perfil" asp-controller="Usuario">Perfil</a>
                    @if (rolUsuario == "Admin")
                    {
                        <a class="btn btn-light btn-sm me-2" asp-action="Dashboard" asp-controller="Admin">Dashboard</a>
                    }
                    <a class="btn btn-danger btn-sm" asp-action="Logout" asp-controller="Usuario">Cerrar sesión</a>
                </div>
            </div>
        </div>
    </header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Actividades" asp-controller="Actividad">Actividades</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="MisInscripciones" asp-controller="Inscripcion">Mis Inscripciones</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Ejercicios" asp-controller="Ejercicio">Ejercicios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Sedes" asp-controller="Sede">Sedes</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        <h2 class="mb-4">Actividades</h2>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Actividad</th>
                        <th>Capacidad</th>
                        <th>Fecha de Inscripción</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.Actividades != null)
                    {
                        foreach (var actividad in ViewBag.Actividades)
                        {
                            <tr>
                                <td>@actividad.Nombre</td>
                                <td>@actividad.Capacidad cupos</td>
                                <td><input type="date" class="form-control" name="fechaInscripcion" /></td>
                                <td><button class="btn btn-primary">Inscribirse</button></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">No hay actividades disponibles.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <h2 class="mt-5">Eventos propios</h2>
        <a class="btn btn-success mb-4" asp-action="CrearEvento" asp-controller="Evento">Crear Evento</a>

        <h2>Eventos del Club</h2>
        <!-- Aquí puedes añadir contenido relacionado -->
    </main>

    <footer class="bg-dark text-white text-center py-3">
        <p class="m-0">© 2024 Club Deportivo. Todos los derechos reservados.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

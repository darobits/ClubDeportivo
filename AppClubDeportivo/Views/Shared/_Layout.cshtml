@{
    var usuarioNombre = ViewBag.UsuarioNombre ?? "Invitado";
    var rolUsuario = ViewBag.RolUsuario ?? "Socio";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <!-- Header -->
    <header class="bg-primary text-white p-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="m-0">AppClubDeportivo</h1>
            <div class="text-end">
                <span class="fw-bold">@usuarioNombre</span>
                <div class="mt-2">
                    <a class="btn btn-light btn-sm me-2" asp-action="Perfil" asp-controller="Usuario">Perfil</a>
                    @if (rolUsuario == "Admin")
                    {
                        <a class="btn btn-light btn-sm me-2" asp-action="Dashboard" asp-controller="Admin">Dashboard</a>
                    }
                    <a class="btn btn-danger btn-sm" asp-action="Logout" asp-controller="Usuario">Cerrar sesión</a>
                </div>
            </div>
        </div>
    </header>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Actividades" asp-controller="Actividad">Actividades</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="MisInscripciones" asp-controller="Inscripcion">Mis Inscripciones</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Ejercicios" asp-controller="Ejercicio">Ejercicios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Sedes" asp-controller="Sede">Sedes</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3">
        <p class="m-0">© 2024 AppClubDeportivo. Todos los derechos reservados.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
